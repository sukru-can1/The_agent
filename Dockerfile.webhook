FROM python:3.12-slim

WORKDIR /app

# Install uv for fast dependency management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy dependency files first for layer caching
COPY pyproject.toml uv.lock* .python-version ./

# Install dependencies
RUN uv sync --frozen --no-dev 2>/dev/null || uv sync --no-dev

# Copy application code
COPY migrations/ migrations/
COPY src/ src/

ENV PYTHONPATH=/app/src

EXPOSE 8080

# Run migrations (allow failure on first deploy) then start webhook server
# Railway sets PORT env var; default to 8080
CMD ["sh", "-c", "uv run python migrations/migrate.py || echo 'Migration warning â€” will retry on next deploy'; exec uv run python -m uvicorn agent1.webhook.app:create_app --factory --host 0.0.0.0 --port ${PORT:-8080}"]
